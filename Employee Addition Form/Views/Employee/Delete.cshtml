@model EmployeeViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1 class ="text-center">Are You Sure Delete @Model.Name </h1>

<div asp-validation-summary="All"></div>

<form asp-action="Delete">

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" readonly />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="JobRole" class="col-form-label"></label>
        <input asp-for="JobRole" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Gender">Gender</label>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="Gender" value="Male" readonly />
            <label class="form-check-label" for="male">Male</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="Gender" value="Female" disabled />
            <label class="form-check-label" for="female">Female</label>
        </div>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" asp-for="IsFirstAppointment" disabled />
        <label class="form-check-label" for="isFirstAppointment">First Appointment</label>
        <span asp-validation-for="IsFirstAppointment" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="StartDate">Start Date</label>
        <input class="form-control" asp-for="StartDate" type="date" readonly />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Notes">Notes</label>
        <textarea class="form-control" asp-for="Notes" readonly></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondry">Cancel</a>
</form>
